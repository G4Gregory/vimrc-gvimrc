:syntax enable

"fonts
set anti
set guifont=Monospace\ 15

"window dimensions
set lines=30
set columns=100

" transparency set...
set transparency=15

"remove toolbar
set guioptions-=T

"setting line break
set tw=85
set showtabline=2

"display invisibles
set list
set listchars=tab:▸\ ,eol:¬

	"invisible character colors
	highlight NonText guifg=#4a4a59
	highlight NonText guibg=NONE
	highlight SpecialKey guifg=#4a4a59

"show tabs at all times
set stal=2
